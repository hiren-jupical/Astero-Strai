<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="strai_visma_import_form" model="ir.ui.view">
        <field name="name">Visma Import</field>
        <field name="model">strai.visma.import</field>
        <field name="arch" type="xml">
            <form string="Visma Import">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button type="object" name="action_generate_import_csv" string="Generate CSV" class="oe_highlight oe_left"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="report_strai_visma_import" model="ir.actions.act_window">
        <field name="name">Visma Import</field>
        <field name="res_model">strai.visma.import</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="strai_visma_import_form"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

        
    <!-- Menu item for triggering the action that opens the wizard -->
    <menuitem id="menu_report_strai_visma_import"
        name="Visma Export"
        action="report_strai_visma_import"
        parent="hr.hr_menu_hr_reports"
        sequence="1"/>

</odoo>