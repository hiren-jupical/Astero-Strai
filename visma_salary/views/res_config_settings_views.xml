<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="strai_visma_settings_view_form" model="ir.ui.view">
        <field name="name">strai_visma.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='analytic']" position="after">
                <h2>Visma Export</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Accounts used on partners for Visma export
                            </div>
                            <div>
                                <label for="partner_receiveable_account"/>                            
                                <field name="partner_receiveable_account"/>
                            </div>
                            <br/>
                            <div>
                                <label for="partner_payable_account"/>                            
                                <field name="partner_payable_account"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>