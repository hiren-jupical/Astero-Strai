<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_order_form_inherited_strai_so_to_store_email" model="ir.ui.view">
        <field name="name">view.order.form.inherited.strai.so.to.store.email</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="before">
                <button name="action_send_so_to_store_email" string="Epost til butikk" type="object" class="btn-primary" invisible="not is_production"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="store_user_id" invisible="1"/>
                <field name="is_production" invisible='1'/>
            </xpath>
       </field>
    </record>
</odoo>
