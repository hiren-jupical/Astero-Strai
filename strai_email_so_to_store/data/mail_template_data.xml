<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_for_so_to_store" model="mail.template">
            <field name="name">Send So To Store</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Offer No {{ object.name }} from {{ object.company_id.name }}</field>
            <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.store_user_id.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/><br/>
                            Thank you very much for your interest in Strai - Norway's largest family-owned manufacturer of kitchens, bathrooms and wardrobes.<br/>
                            Attached is your/their offer as agreed.
                        <br/><br/>
                            We hope this lives up to expectations, and we look forward to a good collaboration going forward.<br/>
                            With best regards.
                        <br/><br/>
                            Admin<br/>
                            System manager<br/>
                        <t t-out="object.user_id.phone"></t><br/>
                        <t t-out="object.user_id.email"></t><br/>
                        <img t-attf-src="/web/image/res.company/{{ object.company_id.id }}/logo" alt="Avatar" style="padding: 0px; margin: 0px; height: auto; width: 120px;" />
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_template_ids" eval="[(4,ref('sale.action_report_saleorder'))]"/>
            <field name="lang">{{ object.store_user_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
