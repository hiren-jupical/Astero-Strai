<?xml version='1.0' encoding='utf-8'?> <odoo>
    <record id="account_move_auto_invoice_approval_form_inherit" model="ir.ui.view">
        <field name="name">account.move.auto.invoice.approval.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="auto_approve_invoice" string="Auto Approve/post" invisible="move_type in ('out_invoice', 'out_refund')" class="oe_highlight" type="object"/>
            </xpath>
            <xpath expr="//page[@name='approval_info']" position="inside">
                <group string="Auto invoice approval">
                    <field name="auto_approval_status" readonly="1"/>
                    <field name="auto_approved_timestamp" readonly="1"/>
                    <field name="auto_approval_info" readonly="1"/>
                    <field name="auto_post_status" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_move_auto_invoice_approval_tree_view_inherit" model="ir.ui.view">
        <field name="name">account.move.auto.invoice.approval.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="invoice_approval_process.account_invoice_tree_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="approved_director_user_id"]' position="after">
                <field name="auto_approval_status" optional="hide"/>
                <field name="auto_post_status" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
