<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_flyt_peppol_order" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.flyt.peppol.order</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="electronic_documents" string="Electronic Documents">
                    <group name="peppol_electronic_documents_information">
                        <field name="edi_send_purchase_order_confirmation"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
