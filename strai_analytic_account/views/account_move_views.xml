<odoo>
    <record id="account_move_form_strai_analytic" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- invoice view -->
            <xpath expr="//page[@id='invoice_tab']//tree//field[@name='account_id']" position="after">
                <field name="strai_analytic_account_id" optional="show"/>
            </xpath>
            <!-- misc journal -->
            <xpath expr="//page[@id='aml_tab']//tree//field[@name='analytic_distribution']" position="before">
                <field name="strai_analytic_account_id" optional="show"/>
            </xpath>
            <!-- default standard field to be hidden. Invoice view -->
            <xpath expr="//page[@id='invoice_tab']//tree//field[@name='analytic_distribution']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <!-- default standard field to be hidden. misc journal view -->
            <xpath expr="//page[@id='aml_tab']//tree//field[@name='analytic_distribution']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_line_filter_strai_analytic_accountinherit" model="ir.ui.view">
        <field name="name">account.move.line.search.strai_analytic_account.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="strai_analytic_account_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.strai_analytic_account.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="strai_analytic_account_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>

