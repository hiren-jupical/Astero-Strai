<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.trunk</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="after">
                <h2>Trunk</h2>
                <div class="row mt16 o_settings_container" name="trunk">
                    <div class="col-12 col-lg-6 o_setting_box" id="trunk_operation">
                        <div class="o_setting_left_pane">
                            <label for="trunk_mode"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="trunk_mode"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="trunk_credentials_username">
                        <div class="o_setting_left_pane">
                            <label for="trunk_username"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="trunk_username"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="trunk_credentials_password">
                        <div class="o_setting_left_pane">
                            <label for="trunk_password"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="trunk_password"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
