<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_director_approval_customdata" model="mail.template">
            <field name="name">Director Approval Vendor Bill - Send by Email</field>
            <field name="email_from">${object.company_id.email}</field>
            <field name="subject">Director Approval - For Vendor Bill For ${object.partner_id.name}</field>
            <field name="email_to">${object.second_approval_user_id.email}</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.second_approval_user_id.name}, 
			<p>
			    % if object.type == 'in_invoice':
			        <p>Please approve vendor bill for vendor: ${object.partner_id.name}.</p>
			        <p>Pending for Director Approval by Director: ${object.second_approval_user_id.name}.</p>
            		<p>Total Amount : ${format_amount(object.amount_total, object.currency_id)}</p><br/>            
			    % endif
			   <div style="width: 375px; margin: 0px; padding: 0px; background-color: #8E0000; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
			       <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
			           <strong style="text-transform:uppercase;">${object.company_id.name}</strong>
            	   </h3>
			   </div>
			   <div style="width: 347px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
			       <span style="color: #222; margin-bottom: 5px; display: block; ">
			           ${object.company_id.partner_id.sudo().with_context(show_address=True, html_format=True).name_get()[0][1] | safe}
			       </span>
			       % if object.company_id.phone:
			           <div style="margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px; padding-top: 0px; padding-right: 0px; padding-bottom: 0px; padding-left: 0px; ">
			               Phone:&nbsp; ${object.company_id.phone}
			           </div>
			       % endif
			       % if object.company_id.website:
			           <div>
			               Web :&nbsp;<a href="${object.company_id.website}">${object.company_id.website}</a>
			           </div>
			       %endif
			       <p></p>
			   </div>
            ]]></field>
        </record>

