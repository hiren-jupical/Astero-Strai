<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="capacity_booking_settings_view_form" model="ir.ui.view">
            <field name="name">capacity.booking.configurator.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='connectors_setting_container']" position="after">
                    <block title="Vendor" id="activate_vendor_per_line_container">
                        <setting id="activate_vendor_per_line" help="This setting will activate the possibility to choose a different vendor for each line on the sale order. The field is company aware. The settings is altered from the company record.">
                            <field name="activate_vendor_pr_line" widget="upgrade_boolean"/>
                            <div class="content-group" name="activate_vendor_pr_line" invisible="not activate_vendor_pr_line"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>