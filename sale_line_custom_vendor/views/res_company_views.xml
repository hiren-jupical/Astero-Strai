<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_company_form_sale_line">
        <field name="name">res.company.form.sale.line.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sale" name="sale">
                    <group>
                        <group>
                            <field name="activate_vendor_pr_line" string='Activate Vendor Per Line'/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>

