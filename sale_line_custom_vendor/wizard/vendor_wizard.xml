<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
    <!-- View -->
    <record model="ir.ui.view" id="winner_ref_wizard">
        <field name="name">Vendors</field>
        <field name="model">vendor.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string='Vendor Wizard' create="false">
                <sheet>
                    <group>
                        <field name="current_vendor"/>
                        <field name="sale_order_line" invisible="1"/>
                        <field name="vendor_ids" widget="many2many_tags" invisible="1"/>
                        <field name="vendors_selection" widget='selection'/>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="save" string="Save" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
