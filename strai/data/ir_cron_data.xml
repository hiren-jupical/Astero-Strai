<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_capacity_booking" model="ir.cron">
        <field name="name">Update Capacity Booking Table</field>
        <field name="model_id" ref="model_mrp_capacity_booking"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_table()</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="doall" eval="False"/>
        <field name="priority">500</field>
    </record>

    <record id="ir_cron_sale_order_this_day_update" model="ir.cron">
        <field name="name">Update this_day field on all sale orders</field>
        <field name="model_id" ref="model_sale_order" />
        <field name="state">code</field>
        <field name="code">model._cron_update_this_day()</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 01:00:00')"/>
        <field name="doall" eval="False"/>
        <field name="priority">500</field>
    </record>
</odoo>
