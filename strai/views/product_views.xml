<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_brands_series_product_template" model="ir.ui.view">
            <field name="name">product_brands_series_product_template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref='product.product_template_form_view'/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_variant_id']" position="after">
                    <field name="product_brand_id"/>
                    <field name="product_series_id"/>
                </xpath>
            </field>
        </record>

<!--        <record id="product_brands_series_product_product" model="ir.ui.view">-->
