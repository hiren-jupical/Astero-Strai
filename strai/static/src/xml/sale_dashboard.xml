<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="sale.SaleDashboard" owl="1">
        <div t-if="saleData['show_dashboard']">
            <div class="container-fluid py-4 border-bottom bg-white">
                <div class="row justify-content-between gap-3 gap-lg-0">
                    <div class="col-12 col-lg-5 col-xl-5 col-xxl-4 flex-grow-1 flex-lg-grow-0 flex-shrink-0">
                        <div class="grid gap-4">
                            <div class="g-col-3 g-col-sm-2 d-flex align-items-center py-2 justify-content-end text-end justify-content-lg-start text-lg-start">
                                All Orders
                            </div>
                            <div class="g-col-9 g-col-sm-10 grid gap-1">
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Tilbud" filter_name="all_draft_and_sent">
                                    <a href="#" class="btn btn-primary w-100 h-100 border-0 rounded-0 strai_text_tranform_none fw-normal">
                                        <div class="fs-2" t-out="saleData['all_draft_and_sent']"/>Tilbud
                                    </a>
                                </div>
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Signert/Reservert" filter_name="all_signed_and_reserved">
                                    <a href="#" class="btn btn-primary w-100 h-100 border-0 rounded-0 strai_text_tranform_none fw-normal">
                                        <div class="fs-2" t-out="saleData['all_signed_and_reserved']"/>Signert/Reservert
                                    </a>
                                </div>
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Til levering" filter_name="all_sale_invoice_status_no">
                                    <a href="#" class="btn btn-primary w-100 h-100 border-0 rounded-0 strai_text_tranform_none fw-normal">
                                        <div class="fs-2" t-out="saleData['all_sale_invoice_status_no']"/>Til levering
                                    </a>
                                </div>
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Til fakturering" filter_name="all_to_invoice">
                                    <a href="#" class="btn btn-primary w-100 h-100 border-0 rounded-0 strai_text_tranform_none fw-normal">
                                        <div class="fs-2" t-out="saleData['all_to_invoice']"/>Til fakturering
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="grid gap-4">
                            <div class="g-col-3 g-col-sm-2 d-flex align-items-center py-2 justify-content-end text-end justify-content-lg-start text-lg-start">
                                My Orders
                            </div>
                            <div class="g-col-9 g-col-sm-10 grid gap-2">
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Tilbud" filter_name="all_draft_and_sent,my_orders">
                                    <a href="#" class="btn btn-light d-flex align-items-center w-100 h-100 p-0 border-0 bg-100 fw-normal">
                                        <div class="w-100 p-2" t-out="saleData['my_draft_and_sent']"/>
                                    </a>
                                </div>
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Signert/Reservert" filter_name="all_signed_and_reserved,my_orders">
                                    <a href="#" class="btn btn-light d-flex align-items-center w-100 h-100 p-0 border-0 bg-100 fw-normal">
                                        <div class="w-100 p-2" t-out="saleData['my_signed_and_reserved']"/>
                                    </a>
                                </div>
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Til levering" filter_name="all_sale_invoice_status_no,my_orders">
                                    <a href="#" class="btn btn-light d-flex align-items-center w-100 h-100 p-0 border-0 bg-100 fw-normal">
                                        <div class="w-100 p-2" t-out="saleData['my_sale_invoice_status_no']"/>
                                    </a>
                                </div>
                                <div class="g-col-3 p-0" t-on-click="setSearchContext" title="Til fakturering" filter_name="all_to_invoice,my_orders">
                                    <a href="#" class="btn btn-light d-flex align-items-center w-100 h-100 p-0 border-0 bg-100 fw-normal">
                                        <div class="w-100 p-2" t-out="saleData['my_to_invoice']"/>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
