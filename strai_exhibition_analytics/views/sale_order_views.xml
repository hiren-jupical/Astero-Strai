<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="strai_exhibiton_analytics_order_form_inherit" model="ir.ui.view">
        <field name="name">strai.exhibiton.analytics.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_type']" position="after">
                <field name="sale_to_self" invisible="1"/>
                <field name="exhibit_analytic_account_id" options="{'no_create': True}" domain="[('account_analytic_type','=', 'exhibition')]" invisible="order_type != 'exhibit' or is_production" required="order_type == 'exhibit' and not is_production" readonly="state in ('sale', 'done', 'cancel')"/>
                <button name="action_analytic_products" string="Choose Products" type="object" class="oe_highlight" invisible="not exhibit_analytic_account_id or sale_to_self or state in ('sale', 'done', 'cancel')"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_extended_view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.extended.view.quotation.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='eno']" position="after">
                <field name='exhibit_analytic_account_id' optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
